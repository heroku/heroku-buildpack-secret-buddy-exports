#   acceptlist_regex=${2:-''}
#   denylist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
#   if [ -d "$env_dir" ]; then
#     for e in $(ls $env_dir); do
